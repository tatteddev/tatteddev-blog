---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<div class="terminal-header">
		<div class="header-line">
			<span class="terminal-prompt">root@tatteddev:~$</span>
			<span class="header-command">./navigate</span>
			<div class="header-status">
				<span class="status-dot online"></span>
				<span class="status-text">ONLINE</span>
			</div>
		</div>
		<nav class="cyber-nav">
			<div class="brand-section">
				<h2 class="cyber-logo">
					<a href="/">
						<span class="logo-bracket">[</span>
						<span class="logo-text">TATTEDDEV</span>
						<span class="logo-bracket">]</span>
					</a>
				</h2>
			</div>
			<div class="nav-links">
				<div class="internal-links">
					<HeaderLink href="/" class="nav-item">//home</HeaderLink>
					<HeaderLink href="/blog" class="nav-item">//blog</HeaderLink>
				</div>
				<div class="social-section">
					<span class="social-label">external_links:</span>
					<div class="social-links">
						<a href="https://github.com/tatteddev" target="_blank" title="GitHub" class="social-link">
							<span class="link-prefix">></span>
							<span class="link-text">github</span>
						</a>
						<a href="https://twitter.com/tatteddev" target="_blank" title="Twitter/X" class="social-link">
							<span class="link-prefix">></span>
							<span class="link-text">twitter</span>
						</a>
					</div>
				</div>
			</div>
		</nav>
	</div>
</header>
<style>
	header {
		margin: 0;
		padding: 0;
		background: var(--bg-dark);
		border-bottom: 2px solid var(--neon-blue);
		box-shadow: 
			0 2px 10px rgba(0, 246, 255, 0.3),
			inset 0 1px 0 rgba(0, 246, 255, 0.1);
		font-family: 'Courier New', monospace;
		position: relative;
		overflow: hidden;
	}
	
	header::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, 
			transparent 0%, 
			rgba(0, 246, 255, 0.05) 50%, 
			transparent 100%
		);
		animation: cyber-sweep 8s infinite;
	}
	
	.terminal-header {
		position: relative;
		z-index: 1;
	}
	
	.header-line {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0.5rem 1rem;
		background: rgba(26, 27, 46, 0.8);
		border-bottom: 1px solid rgba(0, 246, 255, 0.2);
		font-size: 12px;
	}
	
	.terminal-prompt {
		color: var(--neon-blue);
		text-shadow: 0 0 5px var(--neon-blue);
		font-weight: bold;
	}
	
	.header-command {
		color: var(--accent-lime);
		margin-left: 0.5rem;
	}
	
	.header-status {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	
	.status-dot {
		width: 8px;
		height: 8px;
		border-radius: 50%;
		animation: pulse 2s infinite;
	}
	
	.status-dot.online {
		background: var(--accent-lime);
		box-shadow: 0 0 8px var(--accent-lime);
	}
	
	.status-text {
		color: var(--accent-lime);
		font-size: 10px;
		font-weight: bold;
		text-shadow: 0 0 3px var(--accent-lime);
	}
	
	.cyber-nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1rem;
		gap: 2rem;
	}
	
	.brand-section {
		flex-shrink: 0;
	}
	
	.cyber-logo {
		margin: 0;
		font-size: 1.2em;
	}
	
	.cyber-logo a {
		text-decoration: none;
		display: flex;
		align-items: center;
		transition: all 0.3s ease;
	}
	
	.logo-bracket {
		color: var(--neon-pink);
		font-size: 1.2em;
		font-weight: bold;
		text-shadow: 0 0 8px var(--neon-pink);
		animation: bracket-glow 3s ease-in-out infinite alternate;
	}
	
	.logo-text {
		color: var(--neon-blue);
		font-weight: bold;
		margin: 0 0.3rem;
		text-shadow: 0 0 8px var(--neon-blue);
		animation: logo-glow 2s ease-in-out infinite alternate;
	}
	
	.cyber-logo a:hover .logo-text {
		color: var(--neon-pink);
		text-shadow: 0 0 12px var(--neon-pink);
	}
	
	.nav-links {
		display: flex;
		align-items: center;
		gap: 2rem;
		flex-wrap: wrap;
	}
	
	.internal-links {
		display: flex;
		gap: 1.5rem;
		align-items: center;
	}
	
	.nav-item {
		color: var(--neutral-light);
		text-decoration: none;
		font-size: 14px;
		padding: 0.5rem 0;
		border-bottom: 2px solid transparent;
		transition: all 0.3s ease;
		position: relative;
	}
	
	.nav-item::before {
		content: '';
		position: absolute;
		left: -0.5rem;
		top: 50%;
		transform: translateY(-50%);
		width: 0;
		height: 2px;
		background: var(--neon-blue);
		transition: width 0.3s ease;
	}
	
	.nav-item:hover {
		color: var(--neon-blue);
		text-shadow: 0 0 8px var(--neon-blue);
		border-bottom-color: var(--neon-blue);
	}
	
	.nav-item:hover::before {
		width: 0.3rem;
		box-shadow: 0 0 4px var(--neon-blue);
	}
	
	.nav-item.active {
		color: var(--neon-pink);
		border-bottom-color: var(--neon-pink);
		text-shadow: 0 0 8px var(--neon-pink);
	}
	
	.nav-item.active::before {
		width: 0.3rem;
		background: var(--neon-pink);
		box-shadow: 0 0 4px var(--neon-pink);
	}
	
	.social-section {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	
	.social-label {
		color: var(--neutral-mid);
		font-size: 12px;
		font-style: italic;
	}
	
	.social-links {
		display: flex;
		gap: 1rem;
	}
	
	.social-link {
		color: var(--neutral-mid);
		text-decoration: none;
		font-size: 12px;
		display: flex;
		align-items: center;
		transition: all 0.3s ease;
		padding: 0.25rem 0;
	}
	
	.link-prefix {
		margin-right: 0.3rem;
		transition: all 0.3s ease;
	}
	
	.social-link:hover {
		color: var(--neon-blue);
		text-shadow: 0 0 6px var(--neon-blue);
	}
	
	.social-link:hover .link-prefix {
		color: var(--neon-pink);
		text-shadow: 0 0 6px var(--neon-pink);
	}
	
	@keyframes cyber-sweep {
		0% { left: -100%; }
		100% { left: 100%; }
	}
	
	@keyframes pulse {
		0%, 100% { 
			opacity: 1; 
			transform: scale(1); 
		}
		50% { 
			opacity: 0.7; 
			transform: scale(0.9); 
		}
	}
	
	@keyframes bracket-glow {
		0% {
			text-shadow: 0 0 8px var(--neon-pink);
		}
		100% {
			text-shadow: 0 0 12px var(--neon-pink), 0 0 16px var(--neon-pink);
		}
	}
	
	@keyframes logo-glow {
		0% {
			text-shadow: 0 0 8px var(--neon-blue);
		}
		100% {
			text-shadow: 0 0 12px var(--neon-blue), 0 0 16px var(--neon-blue);
		}
	}
	
	@media (max-width: 768px) {
		.cyber-nav {
			flex-direction: column;
			gap: 1rem;
			align-items: flex-start;
		}
		
		.nav-links {
			flex-direction: column;
			gap: 1rem;
			width: 100%;
		}
		
		.internal-links {
			gap: 1rem;
		}
		
		.social-section {
			display: none;
		}
		
		.header-line {
			font-size: 10px;
		}
	}
	
	@media (max-width: 480px) {
		.internal-links {
			flex-direction: column;
			gap: 0.5rem;
		}
		
		.cyber-logo {
			font-size: 1em;
		}
	}
</style>
